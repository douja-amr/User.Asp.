
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>List of Roles</h1>
<a asp-action="Create">Create</a>
<a asp-action="Edit">Edit</a>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <td>Id</td>
            <td>Name</td>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
        <tr>
            <td>@role.Id</td>
            <td>@role.Name</td>

            <td>
                <span><a class="btn btn-primary" asp-controller="Role" asp-action="EditRole" asp-route-id="@role.Id">Edit</a></span>
            </td> 
            <td>
                <span><a class="btn btn-danger" asp-controller="Role" asp-action="DeleteRole" asp-route-id="@role.Id">Delete</a></span>

            </td>
        </tr>
        }

    </tbody>
   
</table>

